<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/encabezadoHistorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/imvIconoTipoE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/objetivo"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/lblTipoE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fondo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/imvIconoTipoE"
            android:layout_marginLeft="12dp"/>

        <TextView
            android:id="@+id/lblFechaE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dom, 14 ene"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@+id/lblTipoE"
            android:layout_alignStart="@+id/lblTipoE"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/lblRitmoE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5:18/km"
            android:textSize="16sp"
            android:textColor="#6366F1"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/cuerpoEstadisticas"
        android:layout_below="@+id/encabezadoHistorial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/objetivo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distancia"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginLeft="6dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lbldistanciarecorrida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.5"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="km"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/objetivo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tiempo"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginLeft="6dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lbltiempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/objetivo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ritmo"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_marginLeft="6dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/lblritmo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5:18"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="min/km"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>